#!/bin/sh
#
# File: xas-logmon
# Date: 04-Nov-2014
# By  : Kevin Esteb
#
# This is the startup procedure for xas-logmon on rhel.
#
### chkconfig info
# chkconfig: 2345 80 80
# description: Starts/Stops the xas-logmon utility
###
#

USER="root"
NAME="xas-logmon"
LCKFILE="/var/lock/subsys/$NAME"
PIDFILE="/var/run/xas/$NAME.pid"
LOGFILE="/var/log/xas/$NAME.log"
CONFIGS="/etc/xas/$NAME.ini"
CONMGR="/progress/properties/conmgr.properties"

# integrate the overrides

if [ -f /etc/sysconfig/$NAME ];then
    . /etc/sysconfig/$NAME
fi

if [ -f /etc/profile.d/xas.sh ]; then
    . /etc/profile.d/xas.sh
fi

PROGRAM="/usr/sbin/$NAME"
PARAMS="--pidfile $PIDFILE --cfgfile $CONFIGS --logfile $LOGFILE --conmgr $CONMGR --daemon"

# integrate the RHEL functions

. /etc/init.d/functions

# Some simple tests

[[ -f $PROGRAM ]] || exit 0
RETVAL=0

fn_start() {

    echo -n $"Starting $NAME: "
    daemon --user $USER $PROGRAM "$PARAMS"
    RETVAL=$?
    echo ""
    [ "$RETVAL" -eq 0 ] && touch $LCKFILE

    return $RETVAL

}

fn_stop() {

    echo -n $"Shutting down $NAME: "
    killproc $NAME
    RETVAL=$?
    [ -f $PIDFILE ] && rm -f $PIDFILE
    [ "$RETVAL" -eq 0 ] && rm -f $LCKFILE
    echo ""

    return $RETVAL

}

fn_status() {

    status -p $PIDFILE $PROGRAM
    RETVAL=$?

    return $RETVAL

}

# See how we were called

case "$1" in
    start)
        fn_start
        ;;

    stop)
        fn_stop
        ;;

    status)
        fn_status
        ;;

    restart|reload)
        fn_stop
        sleep 5
        fn_start
        ;;

    condrestart)
        if [ -f $LCKFILE ] 
        then
            fn_stop
            sleep 3
            fn_start
        fi
        ;;

    *)
        echo "Usage $0 (start|stop|restart|reload|status|condrestart)"
        exit 1

esac

exit $RETVAL

